{
  "name": "@solid-primitives/workers",
  "version": "0.3.0",
  "description": "Primitives that support creating Web Workers.",
  "author": "David Di Biase <dave.dibiase@gmail.com>",
  "license": "MIT",
  "homepage": "https://primitives.solidjs.community/package/workers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidjs-community/solid-primitives.git"
  },
  "primitive": {
    "name": "workers",
    "stage": 0,
    "list": [
      "createWorker",
      "createWorkerPool",
      "createSignaledWorker"
    ],
    "category": "Browser APIs"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "browser": {},
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "start": "vite -r ./dev/ -c ./dev/vite.config.ts",
    "dev": "tsx ../../scripts/dev.ts",
    "build": "tsx ../../scripts/build.ts",
    "vitest": "vitest -c ../../configs/vitest.config.ts",
    "test": "pnpm run vitest",
    "test:ssr": "pnpm run vitest --mode ssr"
  },
  "keywords": [
    "worker",
    "web worker",
    "shared worker",
    "primitives"
  ],
  "peerDependencies": {
    "solid-js": "^1.6.12"
  },
  "typesVersions": {},
  "devDependencies": {
    "solid-js": "^1.8.7"
  }
}
